@model NotesMarketPlace.Models.changepassword

<!DOCTYPE html>
<html lang="en">

<head>

    <!-- important meta tags -->
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Title -->
    <title>NotesMarketPlace</title>

    <!-- favicon-->
    <link rel="icon" href="~/Content/User/home/favicon.ico" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- icons -->
    <link rel="stylesheet" href="~/Content/User/font-awesome/css/font-awesome.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Content/User/bootstrap/bootstrap.min.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/Content/User/style.css" />

    <!-- Responsive CSS -->
    <link rel="stylesheet" href="~/Content/User/responsive.css">

</head>

<body>

    <div id="changepassword-page" class="bg-image">

        <div class="text-center">
            <img src="~/Content/User/pre-login/top-logo.png" alt="logo" id="logo-img" width="180" height="30" />
        </div>

        <div class="form-container">

            @using (Html.BeginForm("ChangePassword", "ChangePassword", FormMethod.Post))
            {
                <div class="title-heading">
                    <h3>Change Password</h3>
                    <p>Enter your new password to change your password</p>
                </div>

                <div class="form-group" id="form-passwd">
                    <label for="password" class="label-text">Old Password @Html.ValidationMessageFor(x => x.oldpassword, "", new { @class = "Error" })</label>
                    @Html.PasswordFor(x => x.oldpassword, new { @class = "form-control input-field", @placeholder = "Enter your old password", @id ="password-old" })
                    <span toggle="#password-old" class="fa fa-eye field-icon toggle-password" aria-hidden="true"></span>
                </div>

                <div class="form-group" id="form-passwd">
                    <label for="password" class="label-text">New Password @Html.ValidationMessageFor(x => x.newpassword, "", new { @class = "Error" })</label>
                    @Html.PasswordFor(x => x.newpassword, new { @class = "form-control input-field", @placeholder = "Enter your new password", @id = "password-new" })
                    <span toggle="#password-new" class="fa fa-eye field-icon toggle-password" aria-hidden="true"></span>
                </div>

                <div class="form-group" id="form-passwd">
                    <label for="password" class="label-text">Confirm Password @Html.ValidationMessageFor(x => x.confirmpassword, "", new { @class = "Error" })</label>
                    @Html.PasswordFor(x => x.confirmpassword, new { @class = "form-control input-field", @placeholder = "Enter your confirm password", @id = "password-confirmed" })
                    <span toggle="#password-confirmed" class="fa fa-eye field-icon toggle-password" aria-hidden="true"></span>
                </div>

                <button type="submit" class="btn btn-primary btn-block" id="login-button">SUBMIT</button>

            }

        </div>

    </div>

    <!-- Jquery  -->
    <script src="~/Scripts/User/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="~/Scripts/User/bootstrap/bootstrap.min.js"></script>

    <!-- Validation -->
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <!-- Custom JS -->
    <script src="~/Scripts/User/script.js"></script>
</body>

</html>